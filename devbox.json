{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "ktlint@1.8.0",
    "ktfmt@0.51",
    "tombi@0.7.12",
    "mado@0.3.0",
    "treefmt@2.4.0",
    "renovate@42.76.4",
    "yamlfmt@0.21.0",
    "typos@1.41.0",
    "toml-sort@0.24.3",
    "formatjson5@0.2.6",
    "rumdl@0.0.213",
    "biome@2.3.11",
    "temurin-bin@21.0.8",
    "actionlint@1.7.10",
    "zizmor@1.20.0",
    "ghalint@1.5.4",
    "stdenv.cc.cc.lib"
  ],
  "shell": {
    "init_hook": [
      "export LD_LIBRARY_PATH=$(pwd)/.devbox/nix/profile/default/lib:$LD_LIBRARY_PATH"
    ],
    "scripts": {
      "fmt": ["treefmt"],
      "check": ["./gradlew lint"]
    }
  }
}
