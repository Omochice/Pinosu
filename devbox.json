{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "ktfmt@0.51",
    "tombi@0.7.27",
    "mado@0.3.0",
    "treefmt@2.4.0",
    "renovate@42.76.4",
    "yamlfmt@0.21.0",
    "typos@1.43.4",
    "toml-sort@0.24.3",
    "formatjson5@0.2.6",
    "rumdl@0.1.18",
    "biome@2.3.15",
    "temurin-bin@21.0.8",
    "actionlint@1.7.10",
    "zizmor@1.22.0",
    "ghalint@1.5.4",
    "stdenv.cc.cc.lib",
    "gojq@0.12.18",
    "moreutils@0.70"
  ],
  "shell": {
    "init_hook": [
      "export LD_LIBRARY_PATH=$(pwd)/.devbox/nix/profile/default/lib:$LD_LIBRARY_PATH"
    ],
    "scripts": {
      "fmt": ["treefmt"],
      "check": ["./gradlew :app:lint :app:detekt"],
      "test": ["./gradlew :app:test"],
      "test:connectedAndroidTest": ["./gradlew :app:connectedAndroidTest"],
      "version-up": [
        "VERSION_CODE=$(gojq -r '.versionCode' version.json)",
        "NEW_VERSION_CODE=$((VERSION_CODE + 1))",
        "gojq --argjson vc \"$NEW_VERSION_CODE\" '.versionCode = $vc' version.json | sponge version.json"
      ]
    }
  }
}
