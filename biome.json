{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*.json"]
  },
  "formatter": {
    "enabled": false
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2,
      "bracketSpacing": true,
      "indentStyle": "space"
    }
  }
}
